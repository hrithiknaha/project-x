<%- include('../partials/header') %>
<div class="ui container">
	<div class="ui form je-form">
		<p class="je-form_header">Small changes to petrify him, eh!</p>
		<form action="/journals/<%=journal._id %>/edit" method="post">
			<div class="field">
				<label for="title">Title</label>
				<input
					type="text"
					name="title"
					id="title"
					value="<%= journal.title %>"
				/>
			</div>

			<div class="field">
				<label for="prologue">Prologue</label>
				<textarea
					class="jn-form_prologue"
					name="prologue"
					id="prologue"
					cols="5"
				>
<%=journal.prologue%></textarea
				>
			</div>

			<div class="field">
				<label for="body">Body</label>
				<textarea name="body" id="body"><%= journal.body%></textarea>
			</div>

			<div class="field">
				<label>Genre</label>
				<div class="ui selection dropdown genre">
					<input type="hidden" name="genre" />
					<i class="dropdown icon"></i>
					<div class="default text">Genre</div>
					<div class="menu">
						<div class="item" data-value="red">Blog</div>
						<div class="item" data-value="orange">Poem</div>
						<div class="item" data-value="green">Journal</div>
						<div class="item" data-value="teal">Poetry</div>
						<div class="item" data-value="violet">Thoughts</div>
						<div class="item" data-value="black">Entry</div>
					</div>
				</div>
			</div>

			<button class="ui positive button" type="submit">Edit</button>
		</form>
	</div>
</div>

<%- include('../partials/footer') %>
